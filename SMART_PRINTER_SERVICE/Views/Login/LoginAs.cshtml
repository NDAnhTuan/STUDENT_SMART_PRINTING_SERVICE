@{
	Layout = null;
}

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Login as - SMART_PRINTER_SERVICE</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="recharge.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
</head>
<style>
	.contain{
		display: flex;
		flex-direction: column;
		width: 100%;
		height: 100vh;
		background-color: #D7D7FF;
	}
	.up{
		flex: 1;
		background-color: #B9DDF6;
		border-bottom-left-radius: 20px;
		border-bottom-right-radius: 20px;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.down{
		flex: 1;	
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.icon-contain{
		width: 600px;
		height: 250px;
		display: flex;
		flex-direction: column;
		align-items:center;
		justify-content: center;
		background-color: #F4D8DB;
		border-radius: 20px;
	}
	h1{
		font-weight: 650;
		font-size: 40px;
		margin-bottom: 20px;
	}
	.image{
		width: 100px;
		height: auto;
	}

	.box{
		width: 1000px;
		height: 250px;
		background: #FFFFFF;
		box-shadow: 20px 20px 20px rgba(0, 0, 0, 0.25);
		border-radius: 50px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	h2{
		font-family: 'Roboto';
		font-style: italic;
		font-weight: 500;
		font-size: 42px;
		line-height: 63px;
		text-align: center;
		color: #9747FF;
		text-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
		margin-bottom: 20px;
	}
	.btn-contain{
		display: flex;
		flex-direction: row;
	}
	.btn{
		width: 250px;
		height: 100px;
		background: rgba(0, 0, 255, 0.43);
		box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
		border-radius: 20px;
		margin-left: 100px;
		margin-right: 100px;
	}
	.btn-text{
		text-decoration:none;
		font-size: 32px;
		color: #616161;
	}
</style>
<div class="contain">
	<div class="up">
		<div class="icon-contain">
			<h1>SMART PRINTING SERVICE</h1>
			<img class="image" src="Images/LoginAsIcon.png" alt="" />
		</div>
	</div>
	<div class="down">
		<div class="box">
			<h2>Login as</h2>
			<div class="btn-contain">
				<button class="btn">
					<a class="btn-text" asp-area="" asp-controller="Home" asp-action="Index">User</a>
				</button>
				<button class="btn">
					<a class="btn-text" asp-area="" asp-controller="SPSOHome" asp-action="ManagePrinter">SPSO</a>
				</button>
			</div>
		</div>
	</div>
</div>