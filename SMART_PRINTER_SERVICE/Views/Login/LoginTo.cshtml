@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Login - SMART_PRINTER_SERVICE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SMART_PRINTER_SERVICE.styles.css" asp-append-version="true" />
    <style>
        html, body {
            width: 100%;
            height: 100%;
        }

        .background-login {
            background-color: #D7D7FF;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: row;
        }

        .left-part {
            width: 40%;
            height: 100%;
            background-color: rgba(0, 255, 194, 0.14);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .left-part__header {
            font-size: 180%;
            font-weight: bold;
            top: 0px;
            opacity: 100%;
            padding-bottom: 50px;
        }

        .right-part {
            width: 60%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            position: absolute;
            width: 500px;
            height: 500px;
            background: #FFFFFF;
            box-shadow: 20px 20px 20px rgba(0, 0, 0, 0.25);
            border-radius: 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .login-box__header {
            font-weight: 650;
            font-size: 50px;
            line-height: 98px;
            text-align: center;
            color: #9747FF;
            text-shadow: 5px 5px 4px rgba(0, 0, 0, 0.25);
            padding-bottom: 40px;
        }

        .login-box__input-field {
            padding: 10px;
        }

        .login-box__input-field__icon {
            width: 80px;
            height: 50px;
            padding-right: 30px;
        }

        .login-box__input-field__input-field {
            background-color: #ccc;
            border: 1px solid;
            border-radius: 20px;
            height: 50px;
            width: 250px;
        }

        .login-box__login-button {
            margin-top: 20px;
            padding: 20px;
            margin-left: 130px;
            background: rgba(0, 0, 255, 0.43);
            box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 20px;
            width: 100px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
        }
    </style>
</head>
<body>
    @*<header>
    <button><a style="border: 1px solid #333" asp-area="" asp-controller="Home" asp-action="Index">Login</a></button>
    </header>*@
    <div class="background-login">
        <div class="left-part">
            <div class="left-part__header">SMART PRINTING SERVICE</div>
            <img src="../Images/PrinterLogin.png" alt="" style="bottom:0px; width: 60%; height: auto; border-radius:40px">
        </div>
        <div class="right-part">
            <div class="login-box">
                <div class="login-box__header">LOGIN</div>
                <form method="post">
                    <div class="login-box__input-field">
                        <img class="login-box__input-field__icon" src="../Images/UsernameIcon.png" alt="" />
                        <label for="username"></label>
                        <input id="username" name="username" class="username login-box__input-field__input-field" type="text" required /><br />
                    </div>
                    <div class="login-box__input-field">
                        <img class="login-box__input-field__icon" src="../Images/PasswordIcon.png" alt="" />
                        <label for="password"></label>
                        <input id="password" name="password" class="password login-box__input-field__input-field" type="password" required /><br />
                    </div>
                    <button class="login-box__login-button">
                        <a style="
                                font-size: 20px;
                                text-align: center;
                                text-decoration: none;
                                color: #333;"> Login </a>
                    </button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
